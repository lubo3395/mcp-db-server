{
    "servers": {
        "mcp-db-server": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-db-server@latest"
            ],
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "root",
                "DB_PASSWORD": "your_password",
                "DB_NAME": "your_database"
            }
        }
    }
}